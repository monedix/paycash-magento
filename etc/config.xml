<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">    
    <default>   
        <payment>
            <paycash_pay>
                <model>Paycash\Pay\Model\Payment</model>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <group>offline</group>
                <is_gateway>1</is_gateway>
                <can_capture>1</can_capture>
                <can_authorize>0</can_authorize>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>
                <payment_action>authorize_capture</payment_action>
                <active>0</active>
                <sandbox>1</sandbox>
                <title>Paga en efectivo con PayCash</title> 
                <test_apikey></test_apikey>
                <production_apikey></production_apikey>
                <country>MEX</country>                
                <validity>3</validity>
                <description>Realiza tu pago en efectivo en cualquiera de los establecimientos afiliados a PayCash con la referencia mostrada a continuación</description>
                <instructions>Realiza tu pago en efectivo en cualquiera de los establecimientos afiliados a PayCash con la referencia mostrada a continuación</instructions>                                             
            </paycash_pay>
        </payment>
    </default>
</config>
